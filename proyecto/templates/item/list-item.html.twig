{% extends 'baseLogged.html.twig' %}

{% block title %}{{ 'List'|trans }}{% endblock %}

{% block body %}

    <div class="centerText">
    <h1>{{ 'Items list from'|trans }} {{ app.user }}</h1>
    </div>

    <hr class="black">
    <br>

    {% if items|length == 0 %}

    <h3 class="centerText">{{ 'There are no items for'|trans }} {{ app.user }}, 
    {{ 'add'|trans }} <a href="{{ path('new-item') }}">{{ 'some'|trans }}</a></h3>

    {% else %}

        <table class="List">

        <tr>
            <th>{{ 'Title'|trans }}</th>
            <th>{{ 'Done'|trans }}</th>
            <th>{{ 'CreatedAt'|trans }}</th>
        </tr>

        {% for item in items %}
            <tr>
                <td>{{ item.title }}</td>
                {% if item.done == 1 %}
                    <td>{{ 'Yes'|trans }}</td>
                {% else %}
                    <td>No</td>
                {% endif %}
                <td> {{ item.createdAt | format_datetime('medium', 'short', locale='')}}</td>
            </tr>
        {% endfor %}

        </table>

    {% endif %}

{% endblock %}
