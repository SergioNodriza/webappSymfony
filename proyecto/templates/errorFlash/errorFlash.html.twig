{% block errorFlash %}
    <div class="centerText">
        {% for message in app.flashes('success') %}
            <br>
            <h3 id="successMessage">
                {{ message }}
            </h3>
        {% endfor %}

        {% for message in app.flashes('fail') %}
            <br>
            <h3 id="errorMessage">
                {{ message }}
            </h3>
        {% endfor %}
    </div>
{% endblock %}